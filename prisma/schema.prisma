generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    Int      @id @default(autoincrement())
  userName  String   @db.VarChar(20)
  userYear  Int
  createdAt DateTime @default(now())

  calendars Calendar[]
  winnings  Winning[]
}

model Calendar {
  calendarId     Int      @id @default(autoincrement())
  calendarDate   Int
  userId         Int
  questionId     Int
  createdAt      DateTime @default(now())
  calendarAnswer String   @db.VarChar(1000)

  user     User     @relation(fields: [userId], references: [userId])
  question Question @relation(fields: [questionId], references: [questionId])
  winning  Winning?
}

model Draw {
  drawId    Int      @id @default(autoincrement())
  drawName  String   @db.VarChar(100)
  drawTotal Int
  createdAt DateTime @default(now())

  winnings Winning[]
}

model Winning {
  winningId  Int      @id @default(autoincrement())
  drawId     Int
  userId     Int
  calendarId Int      @unique // 일대일 관계 보장
  createdAt  DateTime @default(now())

  draw     Draw     @relation(fields: [drawId], references: [drawId])
  user     User     @relation(fields: [userId], references: [userId])
  calendar Calendar @relation(fields: [calendarId], references: [calendarId])
}

model Question {
  questionId      Int      @id @default(autoincrement())
  questionContent String   @db.VarChar(300)
  createdAt       DateTime @default(now())

  Calendar Calendar[]
}
